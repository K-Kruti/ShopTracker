<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCamera"
        android:text="@string/camera"
        android:gravity="center_horizontal"
        style="@style/Black20"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tvGreyLine"
        android:layout_marginTop="15dp"
        android:background="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@id/tvCamera"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGallery"
        android:text="@string/gallery"
        android:gravity="center_horizontal"
        style="@style/Black20"
        app:layout_constraintTop_toBottomOf="@id/tvGreyLine"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tvGreyLine2"
        android:layout_marginTop="15dp"
        android:background="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@id/tvGallery"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCancel"
        android:text="@string/cancel"
        android:gravity="center_horizontal"
        style="@style/Black20"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvGreyLine2"/>

</androidx.constraintlayout.widget.ConstraintLayout>